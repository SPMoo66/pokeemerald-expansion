mapscripts BygoneVault_L1_MapScripts {
	MAP_SCRIPT_ON_TRANSITION {
		if (flag(FLAG_EXP_1_BYGONE_VAULT_LEFT_SWITCH)) {
			setmaplayoutindex (LAYOUT_BYGONE_VAULT_L1_DRAINED)
		}
	}
}

script HopDownLedge {
	msgbox ("Hop down the ledge?", MSGBOX_YESNO)
	closemessage
	if (var(VAR_RESULT)) {
		hidefollower
		applymovement (LOCALID_PLAYER, Common_Movement_JumpDown2)
		waitmovement (0)
	}
}
