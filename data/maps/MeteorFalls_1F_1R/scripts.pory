	walk_fast_right
	walk_fast_up * 2
	walk_fast_right * 7
}

movement MeteorFalls_1F_1R_Movement_CourtneyExit {
	walk_fast_up * 2
	walk_fast_right * 7
}

movement MeteorFalls_1F_1R_Movement_ArchieArrive {
	walk_right * 6
}

movement MeteorFalls_1F_1R_Movement_AquaGruntArrive {
	delay_16
	delay_16
	walk_right * 5
}

movement MeteorFalls_1F_1R_Movement_ArchieExit {
	walk_right * 7
}

movement MeteorFalls_1F_1R_Movement_ArchieApproachPlayer {
	walk_right * 2
	walk_up * 2
	walk_in_place_faster_left
}

movement MeteorFalls_1F_1R_Movement_AquaGrunt1Exit {
	walk_up * 2
	walk_right * 7
}

movement MeteorFalls_1F_1R_Movement_AquaGrunt1ApproachArchie {
	walk_right * 3
	walk_in_place_faster_up
}

movement MeteorFalls_1F_1R_Movement_AquaGrunt2Exit {
	walk_up * 3
	walk_right * 7
}

movement MeteorFalls_1F_1R_Movement_AquaGrunt2ApproachArchie {
	walk_right * 3
	walk_in_place_faster_up
}

movement MeteorFalls_1F_1R_Movement_PushPlayerOutOfWay {
	walk_in_place_faster_down
	delay_4
	walk_in_place_faster_right
	lock_facing_direction
	walk_left
	unlock_facing_direction
	face_right
}

movement MeteorFalls_1F_1R_Movement_RivalRunsIn {
	walk_fast_left * 6
}

movement MeteorFalls_1F_1R_Movement_RivalBeforeBattle {
	walk_left
	walk_in_place_down
}

movement MeteorFalls_1F_1R_Movement_PushRivalOutOfWay {
	walk_in_place_faster_down
	lock_facing_direction
	walk_up
	unlock_facing_direction
	delay_4
	face_right
}

movement MeteorFalls_1F_1R_Movement_RivalApproach {
	walk_down
	walk_left
}

script MeteorFalls_1F_1R_EventScript_ProfCozmo {
	lock
	faceplayer
	if (!flag(FLAG_MET_PROF_COZMO)) {
		msgbox ("I… I'm Cozmo…\n"
				"I'm a Professor…\p"
				"Team Magma asked me to guide them\n"
				"to Meteor Falls…\p"
				"But they tricked me.\n"
				"They even took my Meteorite away…\p"
				"And then another similar bunch,\n"
				"Team Aqua showed up.\p"
				"After that…\n"
				"I don't understand any of it.\p"
				"But that Team Magma…")
		setflag (FLAG_MET_PROF_COZMO)
	}
	else {
		msgbox ("Prof. Cozmo: But that Team Magma…")
	}
	msgbox ("What are they going to do with that\n"
			"Meteorite at Mt. Chimney?")
	release
	end
}

script MeteorFalls_EventScript_ChallengeBall1 {
	lock
	msgbox(format("You feel static running across the ground.\pReach out for the item?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == 1) {
		setflag (FLAG_NO_CATCHING)
		setflag (FLAG_NO_RUNNING)
		setflag (FLAG_SMART_WILD_AI)
		setvar (VAR_STARTING_STATUS, 1)
		setwildbattle (SPECIES_FLOETTE, 28, ITEM_NONE, 2, SPECIES_BELLIBOLT, 28, ITEM_NONE, 0, MOVE_NATURE_POWER, MOVE_SECRET_POWER, MOVE_MAGICAL_LEAF, MOVE_DRAINING_KISS, MOVE_VOLT_SWITCH, MOVE_CHILLING_WATER, MOVE_ACID_SPRAY, MOVE_MUD_SLAP)
		dowildbattle
		setvar (VAR_STARTING_STATUS, 0)
		clearflag (FLAG_NO_CATCHING)
		clearflag (FLAG_NO_RUNNING)
		clearflag (FLAG_SMART_WILD_AI)
		finditem (ITEM_ASSAULT_VEST, 1)
	}
	release
}
